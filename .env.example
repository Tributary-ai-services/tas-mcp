# TAS MCP Version Configuration
# Copy this file to .env and customize as needed

# Service Versions
TAS_MCP_VERSION=1.1.0
GIT_MCP_VERSION=1.0.0

# Build Information (automatically set by build scripts)
# BUILD_DATE=2025-08-04T00:00:00Z
# VCS_REF=abc1234

# Docker Compose Environment
COMPOSE_PROJECT_NAME=tas-mcp

# Network Configuration
DOCKER_NETWORK_NAME=mcp-network

# Port Configuration (if you need to change default ports)
# TAS_MCP_HTTP_PORT=8080
# TAS_MCP_GRPC_PORT=50051
# TAS_MCP_HEALTH_PORT=8082
# GIT_MCP_API_PORT=3000
# GIT_MCP_HEALTH_PORT=3001

# Development/Debug Configuration
LOG_LEVEL=info
FEDERATION_ENABLED=true
FEDERATION_AUTO_DISCOVERY=true

# Registry Configuration
REGISTRY_VALIDATION=true

# Resource Limits (for Kubernetes)
TAS_MCP_CPU_REQUEST=200m
TAS_MCP_MEMORY_REQUEST=256Mi
TAS_MCP_CPU_LIMIT=1000m
TAS_MCP_MEMORY_LIMIT=1Gi

GIT_MCP_CPU_REQUEST=100m
GIT_MCP_MEMORY_REQUEST=128Mi
GIT_MCP_CPU_LIMIT=500m
GIT_MCP_MEMORY_LIMIT=512Mi