# PostgreSQL MCP Server Environment Configuration
# Copy this file to .env and customize the values

# =============================================================================
# SERVICE VERSIONS
# =============================================================================
POSTGRES_MCP_VERSION=1.0.0
POSTGRES_VERSION=16

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Settings
POSTGRES_DB=sampledb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# Connection Pool Settings
MAX_CONNECTIONS=10
QUERY_TIMEOUT=30000

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
# Server Ports
POSTGRES_MCP_PORT=3400
HEALTH_PORT=3401

# Security Settings
READ_ONLY=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# BUILD METADATA (Auto-generated, do not modify)
# =============================================================================
BUILD_DATE=
VCS_REF=

# =============================================================================
# SAMPLE DATA CONFIGURATION
# =============================================================================
# Enable sample data initialization
INIT_SAMPLE_DATA=true

# Sample data options
SAMPLE_DATA_SIZE=small  # small, medium, large